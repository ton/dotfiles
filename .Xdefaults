! General X defaults.
*.visualBell:false
*.bellSuppressTime:0
*.jumpScroll:true
*.multiScroll:true
*.scrollTtyOutput:false
*.scrollKey:true
*.loginShell:true
*.italic:true
*.colorITMode:true
*.boldMode:true
*.colorBDMode:true
*.underLine:true
*.colorULMode:true
*.cursorColor:#ffffff

! Xft configuration, enabling font anti-aliasing and hinting.
Xft.antialias:true
Xft.autohint:true
Xft.dpi:96.000000
Xft.hinting:true
Xft.hintstyle:hintfull
Xft.rgba:rgb

! Tango color scheme.

! black
URxvt*color0:#2e3436
URxvt*color8:#555753
! red
URxvt*color1:#CC0000
URxvt*color9:#EF2929
! green
URxvt*color2:#4E9A06
URxvt*color10:#8AE234
! yellow
URxvt*color3:#C4A000
URxvt*color11:#FCE94F
! blue
URxvt*color4:#3465A4
URxvt*color12:#729FCF
! magenta
URxvt*color5:#75507B
URxvt*color13:#AD7FA8
! cyan
URxvt*color6:#06989A
URxvt*color14:#34E2E2
! white
URxvt*color7:#D3D7CF
URxvt*color15:#EEEEEC

! URxvt configuration.
URxvt*saveLines:12000
URxvt*depth: 32
URxvt*foreground:White
URxvt*background: rgba:1110/1110/1110/dddd
URxvt*cursorBlink:true
URxvt*font:xft:Monospace:size=12
URxvt*boldFont:xft:Monospace:bold:size=12
URxvt*italicFont:xft:Monospace:italic:size=12
URxvt*scrollBar:false
URxvt*scrollstyle:rxvt
URxvt*scrollTtyKeypress:true

! Map windows key + Vim movement command to a similar tmux command to be able to easily navigate through window panes. 
URxvt.keysym.Mod4-j:\033j
URxvt.keysym.Mod4-k:\033k
URxvt.keysym.Mod4-h:\033h
URxvt.keysym.Mod4-l:\033l
URxvt.keysym.Mod4-J:\033J
URxvt.keysym.Mod4-K:\033K
URxvt.keysym.Mod4-H:\033H
URxvt.keysym.Mod4-L:\033L
URxvt.keysym.C-BackSpace:\033\177
