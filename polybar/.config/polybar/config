[module/mic]
type = custom/ipc

hook-0 = $HOME/.local/bin/polybar-mic.sh
hook-1 = $HOME/.local/bin/polybar-mic.sh toggle

initial = 1

click-left = polybar-msg -p %pid% hook mic 2

